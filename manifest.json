{
    "manifest_version": 3,
    "name": "WhatsApp Extractor",
    "version": "1.0",
    "description": "Extrair números de WhatsApp de qualquer página",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "icons": {
      "16": "map.png",
      "48": "map.png",
      "128": "map.png"
    }
  }
  